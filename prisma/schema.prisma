generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(cuid())
  name         String?       @db.String()
  email        String?       @unique @db.String()
  phone        String?       @unique @db.String()
  password     String?       @db.String()
  transactions Transaction[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  categories   Category[]
}

model Category {
  id           String        @id @default(cuid())
  name         String?       @db.String()
  slug         String?       @unique @db.String()
  type         String?       @db.String() // EXPENSE, INCOME
  transactions Transaction[]
  user         User          @relation(fields: [userId], references: [id])
  userId       String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@index([userId])
  @@index([slug])
  @@index([userId, slug])
}

model Currency {
  id           String        @id @default(cuid())
  name         String        @db.String()
  code         String        @unique @db.String()
  symbol       String?       @db.String()
  transactions Transaction[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@index([code])
}

model Transaction {
  id          String    @id @default(cuid())
  amount      Float
  currency    Currency? @relation(fields: [currencyId], references: [id], onUpdate: Cascade, onDelete: Restrict)
  currencyId  String?
  date        DateTime? @default(now()) @db.Date
  user        User?     @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Restrict)
  userId      String?
  category    Category? @relation(fields: [categoryId], references: [id], onUpdate: Cascade, onDelete: SetNull)
  categoryId  String?
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index(currencyId)
  @@index(userId)
  @@index(categoryId)
  @@index(date)
  @@index(description)
  @@index([currencyId, userId, categoryId, date, description])
}
